<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="connection.url">jdbc:oracle:thin:@127.0.0.1:1521:xe</property>
		<property name="connection.username">murtala</property>
		<property name="connection.password">admin</property>
		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.OracleDialect</property>
		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>
		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>
		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>
		<!-- Drop and re-create the database schema on startup -->
		<!-- <property name="hbm2ddl.auto">update</property> -->
		<property name="hbm2ddl.auto">create-drop</property>
		<!-- <mapping resource="org/hibernate/tutorial/domain/Event.hbm.xml" /> -->



<!-- SQL dialect -->
		<!-- true value shows SQL query that is generated by hibrnate -->
		<property name="show_sql">true</property>
		<!-- "update" value specifies that data in table will not be flushed each 
			time session is created. specifying create will flush old data each time 
			session is created -->
		<property name="hbm2ddl.auto">create</property>
		<!-- to bind hibernate session to current running java thread -->
		<property name="current_session_context_class">thread</property>
		<!-- path of hibernate mapping file -->
		<mapping resource="com/thecafetechno/organisation/Employee.hbm.xml"></mapping>
		
		
		
		<!-- One to One mapping -->
		 <mapping resource="oneToOne/Student.hbm.xml"/> <mapping resource="oneToOne/Address.hbm.xml"/> 
		<!-- <mapping class="oneToOneAnnotations/Student"/> <mapping class="oneToOneAnnotations/Address"/> -->
		<!-- One - To - Many mapping -->
		<!-- <mapping resource="oneToMany/Student.hbm.xml" /> <mapping resource="oneToMany/Phone.hbm.xml"/> -->
		<!-- <mapping class="oneToManyAnnotations/Student" /> <mapping class="oneToManyAnnotations/Phone"/> -->

		<!-- Many to One mapping -->
		<!-- <mapping resource="manyToOne/Student.hbm.xml"/> <mapping resource="manyToOne/Address.hbm.xml"/> -->
